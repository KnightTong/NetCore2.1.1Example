@model NetCoreDemo2.Controllers.AccountController.RegisterViewModel
@{
    ViewBag.Title = "注册用户";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
</head>
<body>

    <form class="layui-form layui-form-pane " style="margin-left:35%; margin-top:50px;" asp-action="Signup" method="post">
        <div asp-validation-summary="ModelOnly"></div>
            <div class="layui-form-item">
                <label class="layui-form-label" asp-for="Username">用户名</label>
                <div class="layui-input-inline">
                    <input class="layui-input" asp-for="Username" />
                </div>
                <span asp-validation-for="Username"></span>
            </div>
            <div  class="layui-form-item">
                <label  class="layui-form-label" asp-for="Password">密码</label>
                <div  class="layui-input-inline">
                    <input class="layui-input" asp-for="Password" />
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div  class="layui-form-item">
                <label class="layui-form-label" asp-for="ConfirmPassword">确认密码</label>
                <div class="layui-input-inline">
                    <input class="layui-input" asp-for="ConfirmPassword" />
                </div>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    @*<input type="submit" value="注册" />*@
                    <button class="layui-btn" lay-submit lay-filter="">注册</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>


</form>
</body>
</html>
